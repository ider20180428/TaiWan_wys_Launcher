<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_app_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262932"
    tools:context="com.zxy.wtlauncher.applist.AppsActivity"
    tools:showIn="@layout/activity_main">
    <!--      android:background="@mipmap/listbg"   android:background="#262932"-->
    <TextView
        android:id="@+id/title_apps"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_80"
        android:layout_marginTop="@dimen/h_20"
        android:gravity="center"
        android:textColor="#cccccc"
        android:focusable="false"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/totalsize"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_25"
        android:layout_alignParentRight="true"
        android:text="可用空间4445MB"
        android:focusable="false"
        android:layout_marginTop="@dimen/h_50"
        android:layout_marginRight="@dimen/h_20"
        android:textColor="#cccccc"
        />
    <ProgressBar
        android:id="@+id/size_pro"
        android:layout_width="@dimen/w_150"
        android:layout_height="@dimen/h_3"
        android:layout_below="@+id/totalsize"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/h_20"
        android:layout_marginTop="2dp"
        android:focusable="false"
        android:progress="50"
        style="@android:style/Widget.ProgressBar.Horizontal"
        />
    <GridView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:layout_marginTop="@dimen/h_50"
        android:layout_marginLeft="@dimen/h_30"
        android:layout_marginRight="@dimen/h_30"
        android:layout_marginBottom="@dimen/h_8"
        android:numColumns="6"
        android:focusable="true"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/h_15"
        android:paddingLeft="30dp"
        android:listSelector="#00000000"
        android:paddingTop="50dp"
        android:paddingRight="30dp"
        android:paddingBottom="80dp"/>
    <com.zxy.wtlauncher.applist.FlyImageView
        android:id="@+id/mainUpView1"
        android:layout_marginTop="@dimen/h_56"
        android:layout_marginLeft="@dimen/h_5"
        android:layout_width="293dp"
        android:focusable="false"
        android:layout_height="346dp"
        android:background="@drawable/video_cover_cursors"
        />
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="false"
        android:layout_centerInParent="true"/>

</RelativeLayout>