<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:background="@drawable/mainbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zxy.wtlauncher.widget.MainLayout
        android:id="@+id/main_lay"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="800dp">

    <ImageView
        android:id="@+id/bu_bing_iv"
        android:scaleType="fitXY"
        android:layout_marginLeft="-280dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        android:layout_gravity="center"
        android:src="@drawable/zb"
        android:layout_width="500dp"
        android:layout_height="400dp" />

        <ImageView
            android:id="@+id/qi_bing_iv"
            android:scaleType="fitXY"
            android:focusableInTouchMode="true"
            android:layout_marginRight="-280dp"
            android:layout_gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/zq"
            android:layout_width="500dp"
            android:layout_height="400dp" />

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/z_logo"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="100dp" />
        <include layout="@layout/status_bar_layout"/>

    </com.zxy.wtlauncher.widget.MainLayout>



    <com.zxy.wtlauncher.widget.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
