<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="180dp"
        android:layout_height="800dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:paddingLeft="10dp"
            android:src="@drawable/a7" />
        <ImageView
            android:id="@+id/vip_code_iv"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_width="200dp"
            android:layout_height="200dp" />

            <TextView
                android:id="@+id/vip_device_sn_text"
                android:textColor="@color/black"
                android:background="@drawable/vip_text_bg_shape"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginRight="80dp"
                android:layout_marginTop="80dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="機碼序號 :DASD54F5AS4D2SD1 "
                android:paddingLeft="20dp"
                android:layout_width="480dp"
                android:layout_height="50dp" />
    </FrameLayout>

    <com.zxy.wtlauncher.widget.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
