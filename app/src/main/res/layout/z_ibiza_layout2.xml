<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zxy.wtlauncher.widget.MainLayout
        android:id="@+id/main_lay"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="1000dp"
        android:layout_height="800dp">

        <com.zxy.wtlauncher.widget.ReflectItemView
            android:id="@+id/ibiza1_ref"
            android:scaleType="fitXY"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/aaibza1"
            android:layout_width="425dp"
            android:layout_height="350dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:background="@color/item_bg_color" >

            <ImageView
                android:src="@drawable/aaibza1"
                android:id="@+id/ibiza1_iv"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"
                android:layout_width="280dp"
                android:layout_height="280dp"/>

            <TextView
                android:id="@+id/ibiza1_tv"
                android:text="IBiza TV1"
                style="@style/tv_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />



        </com.zxy.wtlauncher.widget.ReflectItemView>

        <com.zxy.wtlauncher.widget.ReflectItemView
            android:id="@+id/ibiza2_ref"
            android:scaleType="fitXY"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/aaibza2"
            android:layout_width="425dp"
            android:layout_height="350dp"
            android:layout_marginLeft="520dp"
            android:layout_marginTop="50dp"
            android:background="@color/item_bg_color" >

            <ImageView
                android:src="@drawable/aaibza1"
                android:id="@+id/ibiza2_iv"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/ibiza2_tv"
                android:text="IBiza TV2"
                style="@style/tv_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.zxy.wtlauncher.widget.ReflectItemView>



    </com.zxy.wtlauncher.widget.MainLayout>

    <com.zxy.wtlauncher.widget.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
