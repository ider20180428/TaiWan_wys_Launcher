<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zxy.wtlauncher.widget.MainLayout
        android:layout_width="1000dp"
        android:layout_height="800dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.zxy.wtlauncher.widget.ReflectItemView
            android:id="@+id/tv_0"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/item_bg_color"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/tv_iv0"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_tv0"
                style="@style/tv_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TV" />
        </com.zxy.wtlauncher.widget.ReflectItemView>

        <com.zxy.wtlauncher.widget.ReflectItemView
            android:id="@+id/tv_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="420dp"
            android:layout_marginTop="50dp"
            android:background="@color/item_bg_color"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/tv_iv1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_tv1"
                style="@style/tv_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TV" />
        </com.zxy.wtlauncher.widget.ReflectItemView>

        <com.zxy.wtlauncher.widget.ReflectItemView
            android:id="@+id/tv_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="420dp"
            android:layout_marginTop="230dp"
            android:background="@color/item_bg_color"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/tv_iv2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_tv2"
                style="@style/tv_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TV" />
        </com.zxy.wtlauncher.widget.ReflectItemView>


    </com.zxy.wtlauncher.widget.MainLayout>








</RelativeLayout>
